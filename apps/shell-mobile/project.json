{
  "name": "shell-mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/shell-mobile/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/shell-mobile",
        "browser": "apps/shell-mobile/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/shell-mobile/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "src/assets",
            "output": "assets"
          }
        ],
        "define": {
          "API_BASE_URL": "\"https://api.ignaciokoestner.de\"",
          "API_BASE_URL_LOCAL": "\"http://localhost:5000\"",
          "API_BASE_URL_ANDROID_LOCAL": "\"http://10.0.2.2:5000\""
        },
        "styles": [
          "apps/shell-mobile/src/styles.css",
          "apps/shell-mobile/src/global.scss",
          "apps/shell-mobile/src/theme/variables.scss"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "shell-mobile:build:production"
        },
        "development": {
          "buildTarget": "shell-mobile:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "shell-mobile:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/shell-mobile"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "shell-mobile:build",
        "port": 4200,
        "staticFilePath": "dist/apps/shell-mobile/browser",
        "spa": true
      }
    }
  }
}
